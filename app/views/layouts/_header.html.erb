<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "pukupuku app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-right">
        <li><%= link_to "Home", root_path, class: "text-light" %></li>
        <li><%= link_to "Help", help_path, class: "text-light" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, class: "text-light"%></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle text-light" data-toggle="dropdown">
              Account 
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <%else%>
          <li><%= link_to "Log in", login_path, class: "text-light" %></li>
        <%end%>
      </ul>
    </nav>
  </div>
</header>
